<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reproductor_background"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <LinearLayout
        android:id="@+id/topPanelID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_chevron" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Reproducción en curso"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_menu" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/imgView_cover_pic_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgView_gradient_ID"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/gradient_background" />

    </RelativeLayout>


    <TextView
        android:id="@+id/txtV_song_ID"
        android:layout_width="match_parent"
        android:layout_height="26sp"
        android:gravity="center_horizontal"
        android:text="Nombre de la canción"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtV_artista_ID"
        android:layout_width="match_parent"
        android:layout_height="22sp"
        android:gravity="center_horizontal"
        android:text="Artista"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tiempo_transcurrido_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="0:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtV_total_time_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="315dp"
            android:text="0:00"
            android:textColor="@color/white" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar_ID"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shuffle_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_shuffle_off" />

        <ImageView
            android:id="@+id/previous_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_skip_previous" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_pause_button_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_play_arrow" />

        <ImageView
            android:id="@+id/next_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/ic_baseline_skip_next" />

        <ImageView
            android:id="@+id/repeat_button_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_repeat_off" />

    </LinearLayout>


</LinearLayout>
