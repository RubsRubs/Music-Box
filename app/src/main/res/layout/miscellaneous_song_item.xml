<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/black"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_miscellanous_item_imageID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher_foreground"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/linear_layout_Id"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/song_miscellanous_item_imageID"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtV_songID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="song"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtV_artistID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Artist"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_menu_ID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/linear_layout_Id"
        android:background="@drawable/ic_baseline_more_vert"
        android:padding="5dp" />

</RelativeLayout>